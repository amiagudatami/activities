---
import List from "../layouts/CityLayout.astro";
import DynamicIcon from "../components/DynamicIcon.astro";
---

<List title="פעילויות ערים">

  <DynamicIcon
  href="/cities/eilat-city.pdf"
  title="אילת"
  subtitle="מידע על העיר"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/eilat.webp"
/>

  <DynamicIcon
  href="/cities/eilat-pictures.pdf"
  title="אילת"
  subtitle="תמונות"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/eilat.webp"
/>

  <DynamicIcon
  href="/cities/beer-sheva-city.pdf"
  title="באר שבע"
  subtitle="מידע על העיר"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/beersheba.jpg"
/>

  <DynamicIcon
  href="/cities/beer-sheva-pictures.pdf"
  title="באר שבע"
  subtitle="תמונות"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/beersheba.jpg"
/>

  <DynamicIcon
  href="/cities/jerusalem-city.pdf"
  title="ירושלים"
  subtitle="מידע על העיר"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/jerusalem.webp"
/>

  <DynamicIcon
  href="/cities/jerusalem-pictures.pdf"
  title="ירושלים"
  subtitle="תמונות"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/jerusalem.webp"
/>

  <DynamicIcon
  href="/cities/tel-aviv-city.pdf"
  title="תל אביב"
  subtitle="מידע על העיר"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/telaviv.jpg"
/>

  <DynamicIcon
  href="/cities/tel-aviv-pictures.pdf"
  title="תל אביב"
  subtitle="תמונות"
  externalLink={true}
  className="border-b-gray-400"
  icon="images/telaviv.jpg"
/>

</List>
