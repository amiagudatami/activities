---
import Layout from "./Layout.astro";
import Button from "../components/Button.astro";
import Arrow from "../components/Arrow.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div>
    <div class="w-[150px]">
      <Button
        className="py-[4px] px-3 flex-row-reverse"
        title="חזרה לקטגוריות"
        href="/"
      >
        <Arrow width={8} height={8} direction="right" />
      </Button>
    </div>
    <div class="font-bold text-2xl mt-3 mb-5">
      {title}
    </div>
    <div class="dynamic-icon-container">
      <slot />
    </div>
  </div>
</Layout>

<style>
  /* Responsive styles for DynamicIcon container */
  .dynamic-icon-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    /* gap: 1rem; */
  }

    @media (max-width: 1200px) {
    .dynamic-icon-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .dynamic-icon-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

@media (max-width: 480px) {
  .dynamic-icon-container {
    grid-template-columns: 1fr;
    justify-content: center;
    align-items: center;
  }
}
</style>